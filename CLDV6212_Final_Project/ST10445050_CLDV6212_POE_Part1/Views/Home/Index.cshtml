@{
    ViewData["Title"] = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Call your shared layout
}

<!-- Hero Section -->
<div class="text-center hero-section">
    <h1 class="display-3 fw-bold hero-title">Welcome to ABC Retail!</h1>
    <p class="lead hero-subtitle">Your one-stop shop for comfort and style!</p>
    <img src="~/Images/abc_logo.png" alt="ABC Logo" class="hero-logo" />
</div>

<!-- About Section -->
<div class="about-section text-center">
    <h2 class="about-title">About Us</h2>
    <p class="about-text">
        ABC Retail is a rapidly growing online retailer, dedicated to fast and reliable order processing while ensuring a seamless shopping experience for all customers.
    </p>
</div>

<!-- Page-specific CSS -->
<style>
    /* Hero Section */
    .hero-section {
        width: 100%;
        padding: 80px 20px;
        background: linear-gradient(to bottom, #EAEBD0, #CD5656);
        border-radius: 15px;
        margin-bottom: 40px;
        text-align: center;
        transition: all 0.5s ease;
    }

    .hero-title {
        color: #AF3E3E;
        font-weight: bold;
        animation: fadeInDown 1s ease forwards;
    }

    .hero-subtitle {
        color: #CD5656;
        font-size: 1.3rem;
        animation: fadeInUp 1.2s ease forwards;
    }

    .hero-logo {
        max-width: 400px;
        height: auto;
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: transform 0.5s ease, box-shadow 0.5s ease;
    }

        .hero-logo:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0,0,0,0.3);
        }

    /* About Section */
    .about-section {
        background-color: #EAEBD0;
        padding: 50px 20px;
        border-radius: 20px;
        margin: 40px auto;
        max-width: 900px;
        box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        transition: transform 0.5s ease, box-shadow 0.5s ease;
        text-align: center;
    }

        .about-section:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0,0,0,0.25);
        }

    .about-title {
        color: #CD5656;
        margin-bottom: 15px;
    }

    .about-text {
        color: #AF3E3E;
        max-width: 700px;
        margin: auto;
        font-size: 1.1rem;
        line-height: 1.6;
    }

    /* Animations */
    @@keyframes fadeInDown {
        0% {
            opacity: 0;
            transform: translateY(-50px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }

    @@keyframes fadeInUp {
        0% {
            opacity: 0;
            transform: translateY(50px);
        }

        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>
