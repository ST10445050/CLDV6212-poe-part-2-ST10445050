@model ST10445050_CLDV6212_POE_Part1.Models.Product

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use shared layout
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header text-white" style="background-color:#CD5656;">
            <h3 class="mb-0">Delete Product</h3>
        </div>
        <div class="card-body">
            <h5 class="mb-3">Are you sure you want to delete this product?</h5>

            <dl class="row mb-4">
                <dt class="col-sm-3">Product Name</dt>
                <dd class="col-sm-9">@Model.Name</dd>

                <dt class="col-sm-3">Description</dt>
                <dd class="col-sm-9">@Model.Description</dd>

                <dt class="col-sm-3">Product Stock Availability</dt>
                <dd class="col-sm-9">@Model.Quantity</dd>

                <dt class="col-sm-3">Price</dt>
                <dd class="col-sm-9">@Model.Price.ToString("C")</dd>

                <dt class="col-sm-3">Image</dt>
                <dd class="col-sm-9">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="@Model.ImageUrl" alt="@Model.Name" style="height:100px; margin-top:5px;" />
                    }
                </dd>
            </dl>

            <form asp-action="DeleteProduct" method="post">
                <input type="hidden" asp-for="PartitionKey" />
                <input type="hidden" asp-for="RowKey" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

<style>
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        font-weight: bold;
    }

        .btn-secondary:hover {
            background-color: #565e64;
        }

    .btn-danger {
        font-weight: bold;
    }
</style>
