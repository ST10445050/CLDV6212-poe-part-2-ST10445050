@model ST10445050_CLDV6212_POE_Part1.Models.Customer

@{
    ViewData["Title"] = "Customer Details";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Use shared layout
}

<div class="container mt-4">
    <div class="card shadow-lg rounded-3">
        <div class="card-header text-white" style="background-color:#CD5656;">
            <h3 class="mb-0">Customer Details</h3>
        </div>
        <div class="card-body">
            <dl class="row mb-4">
                <dt class="col-sm-3">Customer ID</dt>
                <dd class="col-sm-9">@Model.CustomerID</dd>

                <dt class="col-sm-3">First Name</dt>
                <dd class="col-sm-9">@Model.FirstName</dd>

                <dt class="col-sm-3">Last Name</dt>
                <dd class="col-sm-9">@Model.LastName</dd>

                <dt class="col-sm-3">Phone</dt>
                <dd class="col-sm-9">@Model.Phone</dd>

                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>
            </dl>

            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .btn-secondary {
        background-color: #6c757d;
        color: white;
        font-weight: bold;
    }

        .btn-secondary:hover {
            background-color: #565e64;
        }
</style>
